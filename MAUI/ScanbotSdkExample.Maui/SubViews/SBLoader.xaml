<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScanbotSdkExample.Maui.SubViews.SBLoader"
             xmlns:color="clr-namespace:ScanbotSDK.MAUI;assembly=ScanbotSDK.Shared">
    <Grid 
        BackgroundColor="#99000000">
        <Border
            BackgroundColor="White"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            HeightRequest="100"
            WidthRequest="150">
            <Border.Shadow>
                <Shadow Brush="Black"
                        Offset="20,20"
                        Radius="40"
                        Opacity="0.8" />
            </Border.Shadow>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20" />
            </Border.StrokeShape>
            <Label
                x:Name="sbActivityIndicator"
                VerticalOptions="Start"
                HorizontalOptions="Fill"
                TextColor="{Binding Source={x:Static color:Constants+Colors.ScanbotRed}}"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                FontSize="50"
                Margin="20" />
        </Border>
    </Grid>
</ContentView>
<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ReadyToUseUI.Maui"
             x:Class="ReadyToUseUI.Maui.App"
             xmlns:color="clr-namespace:ScanbotSDK.MAUI;assembly=ScanbotSDK.Shared">
    <Application.Resources>
        <ResourceDictionary>
             <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{Binding Source={x:Static color:Constants+Colors.ScanbotRed}}"/>
                <Setter Property="BarTextColor" Value="White"/>
            </Style>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>

